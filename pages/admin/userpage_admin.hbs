<html lang="en">
  <head>
    {{! YES IT USES THE SAME STYLE AS MUSIC! (zhean) }}
    <link rel="stylesheet" href="../../styles/admin_music.css" />
    <link rel="stylesheet" href="../styles/colors.css" />
    <link rel="stylesheet" href="../../styles/type.css" />
    <link rel="stylesheet" href="../../styles/header-nav.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nabla&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" href="../../favicon.ico" type="image/x-icon" />
    <title>OnRecord Admin: User Management</title>
  </head>
  <body bgcolor="#191E38" style="font-color: white">
  <!-- Navigation Bar -->
  <div class="nav-bar">
      <div class="nav-bar-elements">
        <!-- Title -->
        <a class="on-record" href="/home">
          <span>O</span><span>n</span>
          <br />
          <span>R</span><span>e</span><span>c</span><span>o</span><span
          >r</span><span>d</span>
        </a>
        <!-- Search Bar -->
        <div class="search-bar">
          <input
            type="search"
            class="text-box"
            id="search-input"
            placeholder="Search..."
          />
          <div id="search-results" class="search-results"></div>
        </div>
        <!-- Charts Button -->
        <div class="charts-button">
          <a class="charts" href="/charts">
            <span class="charts-text">Charts</span>
          </a>
        </div>
        <!-- User Button -->
        {{#if user}}
          <div class="user-button">
            <a class="user-button" href="/profile">
              <img class="user-pic" src="{{user.image}}" alt="User Image" />
            </a>
          </div>
          <div class="logout-button">
            <a class="logout" href="/logout">
              <span class="logout-text">Logout</span>
            </a>
          </div>
        {{else}}
          <div class="logout-button">
            <a class="logout" href="/">
              <span class="logout-text">Login</span>
            </a>
          </div>
        {{/if}}
      </div>
  </div>

    <div class="content space-grotesk">
      <h1>Admin Controls: User Management</h1>

      <div class="admin-instructions">
        <h2>This is where you can manage users in the system</h2>
        <div class="help">
          <p>Here you can<b> view, edit, and delete </b>all users OnRecord.</p>
          <p>Input a username of the user, and additional tabs will appear if
            user is found.</p>
        </div>
      </div>

      <!-- ADMIN CONTROLS -->
      <div class="admin_controls" id="control_panel">
        <!-- Content will be populated by JavaScript -->
      </div>
    </div>

    <script src="../../js/userpage_admin.js"></script>
  </body>
</html>