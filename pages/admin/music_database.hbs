<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Styles -->
    <link rel="stylesheet" href="../styles/admin_music.css" />
    <link rel="stylesheet" href="../styles/colors.css" />
    <link rel="stylesheet" href="../styles/type.css" />
    <link rel="stylesheet" href="../styles/header-nav.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Nabla&display=swap"
      rel="stylesheet"
    />
    <!-- Favicon -->
    <link rel="icon" href="../favicon.ico" type="image/x-icon" />
    <title>OnRecord Admin: Music</title>
  </head>
  <body>
    <!-- Navigation Bar -->
    <div class="nav-bar">
      <div class="nav-bar-elements">
        <!-- Title -->
        <a class="on-record" href="/home">
          <span>O</span><span>n</span>
          <br />
          <span>R</span><span>e</span><span>c</span><span>o</span><span
          >r</span><span>d</span>
        </a>
        <!-- Genre Button -->
        <div class="genre-button">
          <button class="genre">Genre</button>
          <div class="genre-content">
            <a href="#">Pop</a>
            <a href="#">Rock</a>
            <a href="#">Hip-Hop</a>
            <a href="#">R&B</a>
            <a href="#">Country</a>
            <a href="#">Jazz</a>
            <a href="#">Classical</a>
            <a href="#">Electronic</a>
            <a href="#">Folk</a>
          </div>
        </div>
        <!-- Search Bar -->
        <div class="search-bar">
          <input
            type="search"
            class="text-box"
            id="search-input"
            placeholder="Search..."
          />
        </div>
        <div id="search-results" class="search-results"></div>
        <!-- Charts Button -->
        <div class="charts-button">
          <a class="charts" href="/charts">
            <span class="charts-text">Charts</span>
          </a>
        </div>
        <!-- User Button -->
        <div class="user-button">
          <a class="user-button" href="/userpage.html">
            <img class="user-pic" src="{{user.image}}" alt="User Image" />
          </a>
        </div>
        <!-- Logout Button -->
        <div class="logout-button">
          <a class="logout" href="/logout">
            <span class="logout-text">Logout</span>
          </a>
        </div>
        <!-- Admin Button -->
        <div class="admin-button">
          <a class="admin" href="/admin">
            <span class="admin-text">Admin</span>
          </a>
        </div>
      </div>
    </div>

    <!-- CONTENT -->
    <div class="content space-grotesk">
      <h1>Admin Controls: Music Database</h1>
      <!-- ADMIN CHOICE BUTTONS -->
      <div class="choice_buttons space-grotesk">
        <button onclick="add_controlpanel()">Add</button>
        <button onclick="search_controlpanel()">Search</button>
        <button onclick="editDel_controlpanel()">Edit/Delete</button>
      </div>
      <h2>
        This is your control panel! Click a button to do operations on the music
        and album database!
        <br />
      </h2>
      <div class="help">
        <b>Add</b>: add music or albums OnRecord.
        <br />
        <b>Search</b>: search or check if a song or album is OnRecord.
        <br />
        <b>Edit/Delete</b>: edit or delete a song or album OnRecord.
      </div>

      <!-- ADMIN CONTROLS -->
      <div class="admin_controls" id="control_panel"></div>
    </div>
    <script src="../js/admin_music_database.js"></script>
  </body>
</html>