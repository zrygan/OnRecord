<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Styles -->
    <link rel="stylesheet" href="../styles/style-home.css" />
    <link rel="stylesheet" href="../styles/colors.css" />
    <link rel="stylesheet" href="../styles/type.css" />
    <link rel="stylesheet" href="../styles/header-nav.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <!-- Favicon -->
    <link rel="icon" href="../favicon.ico" type="image/x-icon" />
    <title>OnRecord: Home Page</title>
  </head>
  <body>
    <!-- Background Images-->
    <img class="bg2" src="../img/home/bg2.png" />
    <img class="bg3" src="../img/home/bg3.png" />
    <img class="bg4" src="../img/home/bg4.png" />
    <img class="bg1" src="../img/home/bg1.png" />
    <!-- Navigation Bar -->
    <div class="nav-bar">
      <div class="nav-bar-elements">
        <!-- Title -->
        <a class="on-record" href="/home">
          <span>O</span><span>n</span>
          <br />
          <span>R</span><span>e</span><span>c</span><span>o</span><span>r</span
          ><span>d</span>
        </a>
        <!-- Genre Button -->
        <div class="genre-button">
          <button class="genre">Genre</button>
          <div class="genre-content">
            <a href="#">Pop</a>
            <a href="#">Rock</a>
            <a href="#">Hip-Hop</a>
            <a href="#">R&B</a>
            <a href="#">Country</a>
            <a href="#">Jazz</a>
            <a href="#">Classical</a>
            <a href="#">Electronic</a>
            <a href="#">Folk</a>
          </div>
        </div>
        <!-- Search Bar -->
        <div class="search-bar">
          <!-- Text Box -->
          <input type="text" class="text-box" />
        </div>
        <!-- Charts Button -->
        <div class="charts-button">
          <a class="charts" href="charts.html">
            <span class="charts-text" href="charts.html">Charts</span>
          </a>
        </div>
        <!-- User Button -->
        <!-- User Button -->
        <div class="user-button">
          <a class="user-button" href="userpage.html">
            <img class="user-pic" src="{{user.image}}" alt="User Image" />
          </a>
        </div>
      </div>
    </div>
    <!-- Main Content -->
    <div class="main-content">
      <!-- Randomly Generated Songs -->
      <div class="random-bar">
        <div class="random-title">Randomly Generated Songs</div>
        <div class="yellow-bar"></div>
        <div class="random-songs">
          <div class="random-content">
            <img src="../img/index/1.png" />
            <img src="../img/index/2.jpg" />
            <img src="../img/index/3.jpg" />
            <img src="../img/index/4.jpg" />
            <img src="../img/index/5.jpg" />
            <img src="../img/index/6.jpg" />
            <img src="../img/index/7.png" />
            <img src="../img/index/8.png" />
            <img src="../img/index/9.png" />
          </div>
        </div>
      </div>
      <div class="catalog-box">
        <div class="catalog-title">The Catalog</div>
        <div class="catalog-list">
          {{#each music}}
            <div class="song-box" data-id="{{this._id}}">
              <a href="/pages/review.html">
              <img class="catalog-pic" src="{{this.image}}" /></a>
              <div class="song-title">{{this.name}}</div>
              <div class="song-artist">{{this.artists}}</div>
              <div class="song-album">{{this.album}}</div>
              <img class="song-heart-list" src="../svg/home/heart_list.svg" />
              <div class="song-heart-number">{{this.hearts}}</div>
              <img class="song-review-icon" src="../svg/home/review-icon.svg" />
              <div class="song-review-number">{{this.reviews}}</div>
              <div class="song-heart-select">
                <img class="song-heart" src="../svg/home/heart-select-gray.svg" />
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <script src="../js/home.js"></script>
  </body>
</html>