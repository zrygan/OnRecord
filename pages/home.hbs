<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Styles -->
    <link rel="stylesheet" href="../styles/style-home.css" />
    <link rel="stylesheet" href="../styles/colors.css" />
    <link rel="stylesheet" href="../styles/type.css" />
    <link rel="stylesheet" href="../styles/header-nav.css" />
    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <!-- Favicon -->
    <link rel="icon" href="../favicon.ico" type="image/x-icon" />
    <title>OnRecord: Home Page</title>
  </head>
  <body>
    <!-- Background Images-->
    <img class="bg2" src="../img/home/bg2.png" />
    <img class="bg3" src="../img/home/bg3.png" />
    <img class="bg4" src="../img/home/bg4.png" />
    <img class="bg1" src="../img/home/bg1.png" />
    <!-- Navigation Bar -->
    <div class="nav-bar">
      <div class="nav-bar-elements">
        <!-- Title -->
        <a class="on-record" href="/home">
          <span>O</span><span>n</span>
          <br />
          <span>R</span><span>e</span><span>c</span><span>o</span><span
          >r</span><span>d</span>
        </a>
        <!-- Genre Button REMOVED FOR NOW -->
        <div class="genre-button">
          <button class="genre"></button>
        </div>
        <!-- Search Bar -->
        <div class="search-bar">
          <!-- Text Box -->
          <input
            type="search"
            class="text-box"
            id="search-input"
            placeholder="Search..."
          />
        <div id="search-results" class="search-results"></div>
        </div>
        <!-- Charts Button -->
        <div class="charts-button">
          <a class="charts" href="charts">
            <span class="charts-text" href="charts">Charts</span>
          </a>
        </div>
        <!-- User Button -->
        <div class="user-button">
          <a class="user-button" href="profile">
            <img class="user-pic" src="{{user.image}}" alt="User Image" />
          </a>
        </div>

        <!-- Logout Button -->
        <div class="logout-button">
          <a class="logout" href="/logout">
            <span class="logout-text">Logout</span>
          </a>
        </div>

        <!-- Admin Button (conditional button) -->
        {{#if (eq user.type "admin")}}
          <div class="admin-button">
            <a class="admin" href="/admin">
              <span class="admin-text">Admin</span>
            </a>
          </div>
        {{/if}}
      </div>
    </div>
    <!-- Main Content -->
    <div class="main-content">
      <!-- Randomly Generated Songs -->
      <div class="random-bar">
        <div class="random-title">Randomly Generated Songs</div>
        <div class="yellow-bar"></div>
        <div class="random-songs">
          <div class="random-content">
            {{#each randomSongs}}
              <a href="/review/{{this._id}}">
                <img src="{{this.image}}" alt="{{this.name}}" />
              </a>
            {{/each}}
          </div>
        </div>
      </div>
      <div class="catalog-box">
        <div class="catalog-title">The Catalog</div>
        <div class="catalog-list">
          {{#each music}}
            <div class="song-box" data-id="{{this._id}}">
              <a href="/review/{{this._id}}">
                <img class="catalog-pic" src="{{this.image}}" /></a>
              <div class="song-title">{{this.name}}</div>
              <div class="song-artist">{{this.artists}}</div>
              <div class="song-album">{{this.album}}</div>
              <img class="song-heart-list" src="../svg/home/heart_list.svg" />
              <div class="song-heart-number">{{this.hearts}}</div>
              <img class="song-review-icon" src="../svg/home/review-icon.svg" />
              <div class="song-review-number">{{this.reviews}}</div>
              <div class="song-heart-select">
                <img
                  class="song-heart"
                  src="{{#if (includes this.likes user.username)}}../svg/home/heart-select-pink.svg{{else}}../svg/home/heart-select-gray.svg{{/if}}"
                />
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
    <script src="../js/home.js"></script>
  </body>
</html>